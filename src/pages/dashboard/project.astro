---
import Dashboard from "../../layouts/Dashboard.astro";
import Boton from "../../components/Boton.astro";
import ShareIcon from "../../../public/icons/share.astro";
import GroupIcon from "../../../public/icons/group.astro";
import  TaskTabler  from "../../components/TaskTabler";
import Create from "../../../public/icons/create.astro";

---

<Dashboard title="Proyecto">
  <div
    class="dark:bg-gray-800 flex items-center justify-between bg-white rounded-lg"
  >
    <p class="text-3xl text-blue-500 font-bold dark:text-purple-500">
      Proyectos
    </p>
    <div class="flex gap-4 items-center p-2 bg-purple-300 rounded">
      <Boton direccion="#" estilos="items-center">
        <ShareIcon slot="before" estilos="text-white w-6" />
      </Boton>
      <Boton direccion="#" estilos="">
        <GroupIcon slot="before" estilos="text-white w-7" />
      </Boton>
    </div>
  </div>

  <div class="my-3 flex gap-2 ">
    <h3 class="text-2xl font-bold text-white py-1 px-2 bg-purple-500 rounded-lg max-w-60">Tareas del proyecto</h3>
    <Boton direccion="/proyectos" estilos="bg-blue-500 p-2 text-white">
    <Create slot="before" estilos="text-white w-6" />
    </Boton>
  </div>

  <div id="contenedor-tasks" class="rounded-lg min-h-96 mt-5">
    <TaskTabler client:idle/>
  </div>
</Dashboard>

<style>
    #contenedor-tasks {
        background-image: url('../../../public/images/1.jpg');
        background-size: cover;
        background-position: center;
    }
</style>
