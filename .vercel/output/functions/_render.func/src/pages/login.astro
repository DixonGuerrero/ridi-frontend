---
import Layout from "../layouts/Layout.astro";
import FormLogin from "../components/FormLogin";
import ArrowLeft from "../../public/icons/arrowLeft.astro";
import Boton from "../components/Boton.astro";

const token = Astro.cookies.get("token")?.value;

if (token !== undefined) {

   return Astro.redirect("/dashboard");
}



---

<Layout title="Login para Ingresar a RIDI">
   <main class="flex justify-center items-center h-screen w-full flex-col">

      <Boton direccion="/" texto="Regresar" estilos="bg-purple-600 text-gray-100 py-2.5 px-5 mb-4" >
         <ArrowLeft slot="before" color="white" />
      </Boton>

      <div class="rounded container-xl">

         <FormLogin client:idle  />
      </div>
   </main>
</Layout>

<style>
   main {
      background-image: linear-gradient(-20deg, #b721ff 0%, #21d4fd 100%);
   }

   div {
     background-color: rgba(255, 255, 255, 0.1); 
   }

</style>